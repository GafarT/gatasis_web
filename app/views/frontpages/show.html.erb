<%- model_class = Frontpage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:carousel_caption1) %>:</strong></dt>
  <dd><%= @frontpage.carousel_caption1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:carousel_lead1) %>:</strong></dt>
  <dd><%= @frontpage.carousel_lead1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:carousel_caption2) %>:</strong></dt>
  <dd><%= @frontpage.carousel_caption2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:carousel_lead2) %>:</strong></dt>
  <dd><%= @frontpage.carousel_lead2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:carousel_caption3) %>:</strong></dt>
  <dd><%= @frontpage.carousel_caption3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:carousel_lead3) %>:</strong></dt>
  <dd><%= @frontpage.carousel_lead3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketing_heading1) %>:</strong></dt>
  <dd><%= @frontpage.marketing_heading1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketing_desc1) %>:</strong></dt>
  <dd><%= @frontpage.marketing_desc1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketing_heading2) %>:</strong></dt>
  <dd><%= @frontpage.marketing_heading2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketing_desc2) %>:</strong></dt>
  <dd><%= @frontpage.marketing_desc2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketing_heading3) %>:</strong></dt>
  <dd><%= @frontpage.marketing_heading3 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marketing_desc3) %>:</strong></dt>
  <dd><%= @frontpage.marketing_desc3 %></dd>
</dl>

<%= image_tag @frontpage.carousel_pic1.url(:thumb) %>
<%= image_tag @frontpage.carousel_pic2.url(:thumb) %>
<%= image_tag @frontpage.carousel_pic3.url(:thumb) %>

<%= image_tag @frontpage.marketing_pic1.url %>
<%= image_tag @frontpage.marketing_pic2.url %>
<%= image_tag @frontpage.marketing_pic3.url %>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              frontpages_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_frontpage_path(@frontpage), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              frontpage_path(@frontpage),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
