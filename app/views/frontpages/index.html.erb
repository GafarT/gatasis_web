<%- model_class = Frontpage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:carousel_caption1) %></th>
      <th><%= model_class.human_attribute_name(:carousel_lead1) %></th>
      <th><%= model_class.human_attribute_name(:carousel_caption2) %></th>
      <th><%= model_class.human_attribute_name(:carousel_lead2) %></th>
      <th><%= model_class.human_attribute_name(:carousel_caption3) %></th>
      <th><%= model_class.human_attribute_name(:carousel_lead3) %></th>
      <th><%= model_class.human_attribute_name(:marketing_heading1) %></th>
      <th><%= model_class.human_attribute_name(:marketing_desc1) %></th>
      <th><%= model_class.human_attribute_name(:marketing_heading2) %></th>
      <th><%= model_class.human_attribute_name(:marketing_desc2) %></th>
      <th><%= model_class.human_attribute_name(:marketing_heading3) %></th>
      <th><%= model_class.human_attribute_name(:marketing_desc3) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @frontpages.each do |frontpage| %>
      <tr>
        <td><%= link_to frontpage.id, frontpage_path(frontpage) %></td>
        <td><%= frontpage.carousel_caption1 %></td>
        <td><%= frontpage.carousel_lead1 %></td>
        <td><%= frontpage.carousel_caption2 %></td>
        <td><%= frontpage.carousel_lead2 %></td>
        <td><%= frontpage.carousel_caption3 %></td>
        <td><%= frontpage.carousel_lead3 %></td>
        <td><%= frontpage.marketing_heading1 %></td>
        <td><%= frontpage.marketing_desc1 %></td>
        <td><%= frontpage.marketing_heading2 %></td>
        <td><%= frontpage.marketing_desc2 %></td>
        <td><%= frontpage.marketing_heading3 %></td>
        <td><%= frontpage.marketing_desc3 %></td>
        <td><%=l frontpage.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_frontpage_path(frontpage), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      frontpage_path(frontpage),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_frontpage_path,
            :class => 'btn btn-primary' %>
