<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:series) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:specs) %></th>
      <th><%= model_class.human_attribute_name(:brand) %></th>
      <th><%= model_class.human_attribute_name(:sub_category_id) %></th>
      <th><%= model_class.human_attribute_name(:remarks1) %></th>
      <th><%= model_class.human_attribute_name(:remarks2) %></th>
      <th><%= model_class.human_attribute_name(:remarks3) %></th>
      <th><%= model_class.human_attribute_name(:remarks4) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to(image_tag(product.product_picture1.url(:thumb)), product_path(product)) %></td>
        <td><%= product.name %></td>
        <td><%= product.series %></td>
        <td><%= truncate(product.description, length: 100, separator: ' ') %></td>
        <td><%= truncate(product.specs, length: 100, separator: ' ') %></td>
        <td><%= product.brand %></td>
        <td><%= product.sub_category_id %></td>
        <td><%= truncate(product.remarks1, length: 100, separator: ' ') %></td>
        <td><%= truncate(product.remarks2, length: 100, separator: ' ') %></td>
        <td><%= truncate(product.remarks3, length: 100, separator: ' ') %></td>
        <td><%= truncate(product.remarks4, length: 100, separator: ' ') %></td>
        <td><%=l product.created_at %></td>
        <td><%=l product.updated_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
