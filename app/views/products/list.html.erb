<% provide(:title, 'Desktop - Products Catalogue') %>
<div class="row">
	<div class="span3">
    <%= render 'layouts/side_nav' %>
	</div>
	<div class="span9">
		<ul class="breadcrumb">
          <li>Products <span class="divider">/</span></li>
          <li><%= link_to @sub_category.category.name, "/sub_categories/#{@sub_category.category.name.tr(' ','-')}" %> <span class="divider">/</span></li>
          <li><%= @sub_category.name %></li>
    </ul>
        <h1><%= @sub_category.name %></h1>
        <% @products.in_groups_of(4,false) do |group| %>
        <div class="row-fluid">
          <ul class="thumbnails">
              <% group.each do |member| %>
              <li class="span3">
                <div class="thumbnail">
                  <%= link_to image_tag(member.product_picture1.url(:medium)), controller: 'products', action: 'details', name: "#{member.name.tr(' ','_')}" %>
                  <div class="caption">
                    <h5><%= member.name %></h5>
                    <p><%= member.remarks1 %></p>
                  </div>
                </div>
              </li>
              <% end %>
        </div>
        <% end %>
	</div>
</div>