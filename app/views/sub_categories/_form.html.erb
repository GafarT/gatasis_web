<%= simple_form_for @sub_category, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.association :category, include_blank: t('.select_category') %>
  <%= f.file_field :sub_category_picture1 %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                sub_categories_path, :class => 'btn' %>
  </div>
<% end %>
